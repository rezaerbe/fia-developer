<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.coaching.DetailCoachActivity">

    <ImageView
        android:id="@+id/coachImageDetail"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/coachNameDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coachImageDetail" />

    <TextView
        android:id="@+id/coachTopicDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Topic"
        android:textAppearance="?attr/textAppearanceOverline"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coachNameDetail" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/coachRatingDetail"
        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coachTopicDetail" />

    <TextView
        android:id="@+id/coachNumRatingDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="(10)"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/coachRatingDetail"
        app:layout_constraintTop_toBottomOf="@id/coachTopicDetail" />

    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVAILABLE   |"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coachRatingDetail" />

    <TextView
        android:id="@+id/coachAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="01/01/2020"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/available"
        app:layout_constraintTop_toBottomOf="@id/coachRatingDetail" />

    <TextView
        android:id="@+id/coachDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Description"
        android:textAppearance="?attr/textAppearanceBody2"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/available" />

</androidx.constraintlayout.widget.ConstraintLayout>